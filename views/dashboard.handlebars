  <main class="container">
    <section class="blogs-section" id="blogs-section">
      <div class="grid-container">
        <h2>Your Posts Below : </h2>
        {{#each posts as |post|}}
        <article class="post">
          <div class="grid-item">
            {{> post-info post}}
            <a href="/dashboard/edit-post/{{post.id}}" class="link">Edit post</a>
          </div>
          {{/each}}
        </article>
      </div>
    </section>
  </main>
