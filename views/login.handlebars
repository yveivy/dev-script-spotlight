<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog: Login</title>
  
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/login.css">

<body>
  <div class="half-screen-container">
    <div class="login-container">
      <form class="login-form">
        <h1 class="login-title">Login</h1>
        <div class="input-group">
          <label for="email-login">Email</label>
          <input type="email" name="email-login" id="email-login">
          {{!-- <span class="msg">Valid email</span> --}}
        </div>
        <div class="input-group">
          <label for="password-login">password</label>
          <input type="password" name="password-login" id="password-login">
          {{!-- <span class="msg">Valid password</span> --}}
        </div>
        <div class="input-group">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>

    <div class="join-container">
      <form class="join-form">
        <h1 class="join-title">Join</h1>
        <div class="input-group">
          <label for="username-join">username</label>
          <input type="text" name="username-join" id="username-join">
          {{!-- <span class="msg">Valid email</span> --}}
        </div>
        <div class="input-group">
          <label for="email-join">email</label>
          <input type="email" name="email-join" id="email-join">
          {{!-- <span class="msg">Valid email</span> --}}
        </div>
        <div class="input-group">
          <label for="password-join">password</label>
          <input type="password" name="password-join" id="password-join">
          {{!-- <span class="msg">Valid email</span> --}}
        </div>
        <div class="input-group">
          <button class="btn btn-primary" type="submit">Join</button>
        </div>
      </form>
    </div>
  </div>
  <script src="/js/login.js"></script>
</body>